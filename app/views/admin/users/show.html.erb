<div class="base-frame">
  <div class="row">
    <h2 class="mt-3"><%= @user.name %>さんの詳細</h2>
  </div>

  <div class="row">
    <table class="table mt-3">
      <tr>
        <td class="col-md-2">ID</td>
        <td><%= @user.id %></td>
        <td></td>
      </tr>

      <tr>
        <td>Name</td>
        <td><%= @user.name %></td>
        <td></td>
      </tr>

      <tr>
        <td>Actor</td>
        <td><%= @user.actor.name %></td>
        <td></td>
      </tr>

      <tr>
        <td>Level</td>
        <td><%= @user.level %></td>
        <td></td>
      </tr>

      <tr>
        <td>Study Time</td>
        <td><%= @user.hours_minutes_seconds %></td>
        <td></td>
      </tr>

      <tr>
        <td>email</td>
        <td><%= @user.email %></td>
        <td></td>
      </tr>

      <tr>
        <td>Status</td>
        <td>
          <% if @user.is_deleted == false %>
            <p class="text-success font-weight-bold align-middle mb-0">有効</p>
          <% else %>
            <p class="text-secondary font-weight-bold align-middle mb-0">退会</p>
          <% end %>
        </td>
        <td></td>
      </tr>
    </table>

    <div class="row mx-auto">
      <%= link_to "Return Users", admin_users_path, class: "btn btn-secondary btn-md" %>
      <%= link_to "Edit User", edit_admin_user_path, class: "btn btn-success btn-md ml-3" %>
    </div>
  </div>
</div>