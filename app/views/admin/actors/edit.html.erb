<%= form_with model: @actor, url: admin_actor_path do |f| %>
  <%= render 'layouts/error_message.html.erb', model: f.object %>
  <div class="base-frame">
    <div class="row d-flex align-items-center">
      <h2 class="mt-3 mr-auto"><%= @actor.name %>を編集</h2>
      <div>
        <%= link_to "Delete Actor", admin_actor_path(@actor), method: :delete,data: { confirm: "[確認]アクターを削除します。よろしいですか？"}, class: "btn btn-danger mb-0 mt-3" %>
      </div>
    </div>

    <div class="row">
      <table class="table mt-3">
        <tr>
          <td class="col-md-2">Actor Name</td>
          <td><%= f.text_field :name, class: "form-control col-md-4" %></td>
        </tr>

        <tr>
          <td>Role</td>
          <td><%= f.select :role, Actor.roles.keys.map, {}, class: "form-control col-md-4" %></td>
        </tr>

        <tr>
          <td>Spawn Maps</td>
          <td><%= f.select :map_id, options_from_collection_for_select(Map.all, :id, :name, selected: @actor.map_id ), { include_blank: "選択無し" }, class: "form-control col-md-4" %></td>
        </tr>
      </table>

      <div class="row mx-auto">
        <%= link_to "Return Actor Detail", admin_actor_path(@actor), class: "btn btn-secondary btn-md" %>
        <%= f.submit "Save Changes", class: "btn btn-success btn-md ml-3" %>
      </div>
    </div>
  </div>
<% end %>