<div class="base-frame">
  <div class="action-view-frame border system-font loading-container">
    <%= render 'layouts/flash' %>
    <%= render 'now_loading' %>
    <div class="fadein-content">
      <div class="title-container d-flex flex-column">
        <div class="title mb-auto">
          <div class="title-command-box d-flex flex-column text-center">
            <div class="mb-2">
              <%= link_to "はじめから", attention_path, class: "h2 text-initialize" %>
            </div>
            <div class="mb-2">
              <%= link_to "つづきから", new_user_session_path, class: "h2 text-initialize" %>
            </div>
            <div class="mb-5">
              <%= link_to "せつめいしょ", about_path, class: "h2 text-initialize" %>
            </div>
          </div>
          <div class="title-trial">
            <%= link_to users_guest_sign_in_path, method: :post, class: "h2 text-initialize mb-0 text-center" do %>
              <p>たいけんばん<br>(ゲストログイン)</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('.fadein-content').fadeIn(2000, function() {
      $('.loading-box').fadeOut();
    });
  });
</script>