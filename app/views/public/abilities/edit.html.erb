<div class="base-frame">
  <%= form_with model: @ability, url: ability_path(@ability) do |f| %>
    <%= render 'layouts/error_message_shalica.html.erb', model: f.object %>
    <div class="action-view-frame system-window system-window-border system-font text-center">
      <div class="fadein-content">
        <div class="system-window-border system-window-inner m-1">
          <h2 class="mt-3">アビリティのなまえをへんこう</h2>
            <div class="p-1">
              <div class="field mt-4">
                <%= f.text_field :name, class: "form-control col-md-10 mx-auto" %>
              </div>
              <div class="edit_ability-btn-box mt-1 d-flex align-items-start flex-column">
                <div class="mt-5 pb-2 mx-auto">
                  <%= f.submit "なまえをへんこうする！", class: "btn btn-success" %>
                </div>
                <div class="mt-auto mb-3 mx-auto">
                  <%= link_to "アビリティをさくじょする", ability_path(@ability), method: :delete, class: "btn btn-danger" %>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  $(document).ready(function() {
    $('.fadein-content').fadeIn("slow")
  });
</script>