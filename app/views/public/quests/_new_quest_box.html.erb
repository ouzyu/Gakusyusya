<div id="new-quest-box" class="new-quest-box slide-window">
  <div class="d-flex">
    <div class="new-quest-left-sidebar">
      <%= form_with model: quest, url: quests_path do |f| %>
      <div class="mt-2">
        <%= f.label :map_id, "マップをえらんでください。" %>
        <%= f.select :map_id, options_from_collection_for_select(Map.all, :id, :name), { include_blank: "みせんたく" }, class: "form-control" %>
      </div>

      <div class="mt-2">
        <%= f.label :actor_id, "たおしたいボスをえらんでください。" %>
        <%= f.select :actor_id, options_from_collection_for_select(Actor.where(role: "boss"), :id, :name), { include_blank: "みせんたく" }, class: "form-control" %>
      </div>

      <div class="mt-2">
        <%= f.label :ability_id, "つよくしたいアビリティをえらんでください。" %>
        <%= f.select :ability_id, options_from_collection_for_select(Ability.where(user_id: user.id), :id, :name), { include_blank: "みせんたく" }, class: "form-control" %>
      </div>

      <div class="mt-2">
        <%= f.label :seconds, "クエストのじかんをえらんでください。" %>
        <%= f.select :seconds, [['5ふん', 300], ['10ぷん', 600], ['15ふん', 900], ['20ぷん', 1200], ['25ふん', 1500]], {}, class: "form-control" %>
      </div>

      <div class="mt-2">
        <%= f.label :content, "ここはじゆうにことばをにゅうりょくできます。" %>
        <%= f.text_area :content, placeholder: "かんじドリル", :size=>"20x4", class: "form-control" %>
      </div>
    </div>

    <div class="new-quest-right-sidebar d-flex align-items-end flex-column">
      <div class="preview-map-box mt-3 mx-auto">
        <img id="preview" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" style="width: 100%; max-height: 150px; min-height: 150px; max-width: 150px; object-fit: cover;">
      </div>
      <div class="preview-boss-box mt-2 mx-auto">

      </div>
      <div class="btn-quest-start mt-auto mx-auto">
        <%= f.submit "クエストかいし！", class: "btn btn-lg btn-success" %>
      </div>
    </div>
    <% end %>

    <div class="quit-box">
      <button id="btn-quit-new-quest" class="text-initialize" type="button">X</button>
    </div>
  </div>
</div>